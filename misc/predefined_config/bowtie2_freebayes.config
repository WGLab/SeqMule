o_gatk_indelfilters=QDFilter,QD<2.0;ReadPosFilter,ReadPosRankSum<-20.0;FSFilter,FS>200.0 #hard filters for indels, used when indel VQSR is unavailable
o_gatk_snpfilters=QDFilter,QD<2.0;FSFilter,FS>60.0;MQFilter,MQ<40.0;MaqQualRankSumFilter,MappingQualityRankSum<-12.5;ReadPosFilter,ReadPosRankSum<-8.0 #hard filters for small input files, used when VQSR is unavailable
o_gatk_HCadditional=  -rf BadCigar -l ERROR #add extra arguments to gatk haplotype caller (not filter step), no quotes
