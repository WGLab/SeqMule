	if($analyze == 1)
	{
	    if($son[$c][0] ne "0" && $son[$c][1] ne "0" )
	    {
		#Father-Offspring IBS checks
		$fibs_two++ if (&allele_compare($dad[$c],"11",$son[$c],"11"));
		$fibs_one++ if (&allele_compare($dad[$c],"11",$son[$c],"12"));
		$fibs_zero++ if (&allele_compare($dad[$c],"11",$son[$c],"22"));
		$fibs_two++ if (&allele_compare($dad[$c],"22",$son[$c],"22"));
		$fibs_one++ if (&allele_compare($dad[$c],"22",$son[$c],"12"));
		$fibs_zero++ if (&allele_compare($dad[$c],"22",$son[$c],"11"));
