		#Monther-Offspring IBS checks      
		$mibs_two++ if (&allele_compare($mom[$c],"11",$son[$c],"11"));
		$mibs_one++ if (&allele_compare($mom[$c],"11",$son[$c],"12"));
		$mibs_zero++ if (&allele_compare($mom[$c],"11",$son[$c],"22"));
