    my @mom="";
    my @son="";
    my $a="";
    my $nsnps="";
    my $ncalls="";
    my $fixed_genotypes="";
    my $callrate="";
    my $nerrors=0;
    my $adi=0;
    my $ado=0;
    my $nfixed=0;
    my $p_fixed=0;
    my $analyze = 1;
    my $fibs_zero = 0;
    my $fibs_one = 0;
    my $fibs_two = 0;
    my $mibs_zero = 0;
    my $mibs_one = 0;
